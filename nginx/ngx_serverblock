server {
        ## Your website name goes here.
        server_name domain.tld;
        ## Your only path reference.
        root /var/www/tonics/web/public;
        client_max_body_size 900M;
        ## This should be in your http block and if it is, it's not needed here.
        index index.php;

        location = /favicon.ico {
                log_not_found off;
                access_log off;
        }

        location = /robots.txt {
                allow all;
                log_not_found off;
                access_log off;
        }

        # DISALLOW PHP EXECUTION IN THE UPLOAD FOLDER
        location ~ /uploads/.*\.php$ {
                return 403;
        }

        location / {
                try_files $uri $uri/ /index.php?$query_string;
        }

        location ~ \.php$ {
            #NOTE: You should have "cgi.fix_pathinfo = 0;" in php.ini
            include fastcgi_params;
            fastcgi_intercept_errors on;
            #The following parameter can be also included in fastcgi_params file
            fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
            fastcgi_pass unix:/var/run/php/php8.1-fpm-onlysitename.sock;
            include snippets/fastcgi-php.conf;
            fastcgi_param PHP_VALUE "upload_max_filesize=5G \n post_max_size=2G \n output_buffering=off \n memory_limit = 1000M";
            fastcgi_cache_valid 200 301 302 60m;
            fastcgi_cache_use_stale error timeout updating invalid_header http_500 http_503;
            fastcgi_cache_min_uses 1;
            fastcgi_cache_lock on;
            add_header X-FastCGI-Cache $upstream_cache_status;
        }

        # NGINX X-Accel Download Redirection Settings
        location /download {
           internal;
            alias /var/www/tonics/private;
        }

        # NGINX X-Accel For Themes
        location /themes {
             internal;
             alias /var/www/tonics/web/src/Themes;
        }

        # NGINX X-Accel For Plugins
        location /plugins {
             internal;
             alias /var/www/tonics/web/src/Plugins;
        }
}
